# Dockerfile for FastAPI Services
# Used by: API Gateway, LLM Router, Search, Digest Generation, Feedback

FROM python:3.13-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files
COPY pyproject.toml ./
COPY .python-version ./

# Install uv
RUN pip install --no-cache-dir uv

# Install dependencies (core only, no optional)
RUN uv pip install --system -r <(uv pip compile pyproject.toml)

# Copy source code
COPY src/ ./src/
COPY config/ ./config/

# Build argument for service path
ARG SERVICE_PATH
ENV SERVICE_PATH=${SERVICE_PATH}

# Expose default port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run FastAPI app
CMD uvicorn ${SERVICE_PATH/\//.}.main:app --host 0.0.0.0 --port 8000
