# Dockerfile for Streamlit Dashboard

FROM python:3.13-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files
COPY pyproject.toml ./
COPY .python-version ./

# Install uv
RUN pip install --no-cache-dir uv

# Install dependencies with dashboard extras
RUN uv pip install --system -r <(uv pip compile pyproject.toml --extra dashboard)

# Copy source code
COPY src/ ./src/
COPY config/ ./config/

# Expose Streamlit port
EXPOSE 8501

# Configure Streamlit
ENV STREAMLIT_SERVER_PORT=8501
ENV STREAMLIT_SERVER_ADDRESS=0.0.0.0
ENV STREAMLIT_SERVER_HEADLESS=true

# Run Streamlit app
CMD streamlit run src/services/dashboard/app.py
